/*
 * ADH CLI Global Stylesheet
 *
 * This stylesheet defines global styles, semantic classes, and component
 * base styles that follow Textual's design system principles.
 *
 * All colors use theme variables to support light/dark modes and theming.
 */

/* ============================================================
 * BASE STYLES
 * ============================================================ */

Screen {
    background: $background;
}

/* ============================================================
 * TYPOGRAPHY
 * ============================================================ */

.heading-1 {
    text-style: bold;
    color: $text-primary;
}

.heading-2 {
    text-style: bold;
    color: $text-primary;
}

.heading-3 {
    text-style: bold;
    color: $text-secondary;
}

.text-primary {
    color: $text-primary;
}

.text-secondary {
    color: $text-secondary;
}

.text-muted {
    color: $text-muted;
}

.text-disabled {
    color: $text-disabled;
}

.text-center {
    text-align: center;
}

.text-bold {
    text-style: bold;
}

/* ============================================================
 * LAYOUT UTILITIES
 * ============================================================ */

.container {
    padding: 1 2;
}

.container-sm {
    padding: 1;
}

.container-lg {
    padding: 2 4;
}

.section {
    margin: 2 0;
}

.section-sm {
    margin: 1 0;
}

/* Content width constraints for readability */
.content-constrained {
    max-width: 120;
}

.chat-constrained {
    max-width: 100;
}

.form-constrained {
    max-width: 80;
}

/* ============================================================
 * CARD/PANEL COMPONENTS
 * ============================================================ */

.card {
    background: $panel;
    border: solid $border;
    padding: 1 2;
    margin: 1 0;
}

.card-elevated {
    background: $surface;
    border: solid $primary;
    padding: 2;
    margin: 1 0;
}

.card-flat {
    background: $surface;
    padding: 1 2;
    margin: 1 0;
}

/* ============================================================
 * STATUS AND STATE CLASSES
 * ============================================================ */

.status-success {
    background: $success;
    color: $foreground;
}

.status-warning {
    background: $warning;
    color: $foreground;
}

.status-error {
    background: $error;
    color: $foreground;
}

.status-info {
    background: $primary;
    color: $foreground;
}

/* Risk level indicators */
.risk-none {
    color: $text-muted;
}

.risk-low {
    color: $success;
}

.risk-medium {
    color: $warning;
}

.risk-high {
    color: $warning-darken-2;
}

.risk-critical {
    color: $error;
    text-style: bold;
}

/* Execution states */
.state-pending {
    color: $secondary;
}

.state-running {
    color: $primary;
}

.state-success {
    color: $success;
}

.state-failed {
    color: $error;
}

.state-blocked {
    color: $warning;
}

/* ============================================================
 * BUTTON STYLES
 * ============================================================ */

Button {
    min-width: 12;
    margin: 0 1;
}

Button:focus {
    border: solid $primary;
}

/* Button variants are handled by Textual, but we can add spacing */
.button-group {
    align: center middle;
    height: 3;
    margin-top: 1;
}

.button-group-tight {
    align: center middle;
    height: 3;
    margin-top: 0;
}

/* Small icon-only buttons for inline actions (e.g., copy buttons) */
.message-icon-button {
    min-width: 3;
    width: 3;
    height: 1;
    padding: 0 0;
    margin: 0 0 0 1;
    text-align: center;
    border: none;
    background: transparent;
    color: $text-muted;
}

.message-icon-button:hover {
    background: $boost;
    color: $text;
}

.message-icon-button:focus {
    border: solid $accent;
    background: $boost;
    color: $text;
}

/* ============================================================
 * INPUT AND FORM STYLES
 * ============================================================ */

Input {
    border: solid $border;
}

Input:focus {
    border: solid $primary;
}

Input.error {
    border: solid $error;
}

.form-field {
    margin: 1 0;
}

.form-label {
    color: $text-primary;
    margin-bottom: 0;
}

.form-help {
    color: $text-muted;
    margin-top: 0;
}

/* ============================================================
 * CHAT-SPECIFIC STYLES
 * ============================================================ */

.chat-message {
    margin: 1 0;
    padding: 1 2;
}

.chat-user {
    color: $primary;
}

.chat-ai {
    color: $accent;
}

.chat-system {
    color: $secondary;
}

/* ============================================================
 * MODAL AND DIALOG STYLES
 * ============================================================ */

ModalScreen > Container {
    background: $surface;
    /* Neutral modal frame to avoid bright rails */
    border: solid $border;
    padding: 2;
}

.modal-title {
    text-align: center;
    text-style: bold;
    color: $text-primary;
    margin-bottom: 1;
}

.modal-content {
    margin: 1 0;
}

.modal-actions {
    dock: bottom;
    height: 3;
    margin-top: 2;
    align: center middle;
}

/* ============================================================
 * BADGE COMPONENTS
 * ============================================================ */

.badge {
    text-align: center;
    padding: 0 1;
    margin: 0 1;
    width: auto;
}

.badge-success {
    background: $success;
    color: $foreground;
}

.badge-warning {
    background: $warning;
    color: $foreground;
}

.badge-error {
    background: $error;
    color: $foreground;
}

.badge-info {
    background: $primary;
    color: $foreground;
}

/* Risk badges with semantic meaning */
.risk-badge {
    text-align: center;
    padding: 0 2;
    text-style: bold;
}

.risk-badge-low {
    background: $success;
    color: $foreground;
}

.risk-badge-medium {
    background: $warning;
    color: $foreground;
}

.risk-badge-high {
    background: $warning-darken-2;
    color: $foreground;
}

.risk-badge-critical {
    background: $error;
    color: $foreground;
}

/* ============================================================
 * NOTIFICATION STYLES
 * ============================================================ */

.notification {
    height: auto;
    margin: 1 0;
    padding: 1 2;
    border: tall $border;
}

.notification-info {
    background: $primary-lighten-2;
    border: tall $primary;
}

.notification-success {
    background: $success-lighten-2;
    border: tall $success;
}

.notification-warning {
    background: $warning-lighten-2;
    border: tall $warning;
}

.notification-error {
    background: $error-lighten-2;
    border: tall $error;
}

/* ============================================================
 * ACCESSIBILITY
 * ============================================================ */

/* Enhanced focus indicators (scoped to interactive widgets only) */
Input:focus,
Button:focus,
Checkbox:focus,
Switch:focus,
Select:focus,
RadioSet:focus,
OptionList:focus,
TextArea:focus {
    border: solid $primary;
}

/* Avoid global focus-within outlines which created full-screen rails */
/* Add per-widget outlines if needed for accessibility */

/* ============================================================
 * UTILITY CLASSES
 * ============================================================ */

.hidden {
    display: none;
}

.visible {
    display: block;
}

/* Spacing utilities */
.m-0 { margin: 0; }
.m-1 { margin: 1; }
.m-2 { margin: 2; }
.m-4 { margin: 4; }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: 1; }
.mt-2 { margin-top: 2; }
.mt-4 { margin-top: 4; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: 1; }
.mb-2 { margin-bottom: 2; }
.mb-4 { margin-bottom: 4; }

.p-0 { padding: 0; }
.p-1 { padding: 1; }
.p-2 { padding: 2; }
.p-4 { padding: 4; }

/* Width utilities */
.w-full { width: 100%; }
.w-auto { width: auto; }

/* Height utilities */
.h-full { height: 100%; }
.h-auto { height: auto; }
