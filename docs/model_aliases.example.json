{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Model aliases configuration for ADH CLI. Place this file at ~/.config/adh-cli/model_aliases.json",
  "model_aliases": {
    "creative": {
      "model_id": "gemini-flash-latest",
      "parameters": {
        "temperature": 1.2,
        "top_p": 0.95
      }
    },
    "precise": {
      "model_id": "gemini-2.5-pro",
      "parameters": {
        "temperature": 0.1,
        "top_p": 0.9,
        "top_k": 20
      }
    },
    "concise": {
      "model_id": "gemini-flash-lite-latest",
      "parameters": {
        "temperature": 0.7,
        "max_output_tokens": 2048
      }
    },
    "detailed": {
      "model_id": "gemini-2.5-pro",
      "parameters": {
        "temperature": 0.8,
        "max_output_tokens": 32768,
        "top_p": 0.95
      }
    }
  }
}

